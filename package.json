{
  "name": "react-webpack-boilerplate",
  "version": "1.0.0",
  "description": "A basic environment for writing React apps in ES6 and built using webpack",
  "private": true,
  "scripts": {
    "test": "mocha --compilers js:babel/register --recursive",
    "test:watch": "npm run test -- --watch",
    "webpack-server": "webpack-dev-server --hot --progress --colors",
    "web-server": "http-server -p 8080.",
    "start": "npm run webpack-server & npm run web-server"
  },
  "keywords": [
    "react",
    "webpack",
    "babel"
  ],
  "author": "Drew Rawitz",
  "devDependencies": {
    "autoprefixer-loader": "^2.0.0",
    "babel-core": "^5.8.22",
    "babel-loader": "^5.3.2",
    "chai": "^3.2.0",
    "css-loader": "^0.16.0",
    "file-loader": "^0.8.4",
    "http-server": "^0.8.0",
    "img-loader": "^1.2.0",
    "mocha": "^2.3.2",
    "node-sass": "^3.2.0",
    "postcss-loader": "^0.5.1",
    "react-hot-loader": "^1.2.8",
    "sass-loader": "^2.0.1",
    "source-map-loader": "^0.1.5",
    "style-loader": "^0.12.3",
    "url-loader": "^0.5.6",
    "webpack": "^1.11.0",
    "webpack-dev-server": "^1.10.1"
  },
  "dependencies": {
    "react": "^0.13.3"
  }
}
